{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "ipmap",
  "version": "5.0.0",
  "identifier": "dev.grantshandy.ipmap",
  "build": {
    "beforeDevCommand": "pnpm dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "pnpm build && cargo b -r -p ipmap-child",
    "frontendDist": "../../ui/build"
  },
  "app": {
    "windows": [
      {
        "label": "main",
        "title": "Ipmap",
        "width": 800,
        "height": 600,
        "minWidth": 640,
        "minHeight": 480
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "resources": ["resources/ipmap-child"],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
